<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.synerzip.poc.IOActivity">
    <EditText
        android:id="@+id/edt_content_to_write"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter contents to write in file"/>
    <TextView
        android:id="@+id/txt_content_from_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_save_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save File"/>

    <Button
        android:id="@+id/btn_read_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Read File"/>
    <TextView
        android:id="@+id/txt_assets_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="false"/>
    <Button
        android:id="@+id/btn_read_assets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Read Assets"/>

    <Button
        android:id="@+id/btn_read_raw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Read Raw Data"/>


</LinearLayout>
